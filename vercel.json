{
  "version": 2,
  "builds": [
    {
      "src": "web/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "web/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "web/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "web/frontend/dist/$1"
    }
  ],
  "env": {
    "SHOPIFY_API_KEY": "@shopify_api_key",
    "SHOPIFY_API_SECRET": "@shopify_api_secret",
    "SCOPES": "write_products,write_discounts",
    "HOST": "@host"
  }
}
